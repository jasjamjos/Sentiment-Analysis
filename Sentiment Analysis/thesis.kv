<Screen>:
	canvas:
		Color:
			rgb: .91, .92, .93
		Rectangle:
			size: self.size

<ScreenOne>:
	canvas.after:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/splashscreen.png'

<ScreenTwo>:

	BoxLayout:

		orientation: 'vertical'

		BoxLayout:

			orientation: 'horizontal'
			size_hint_y: None
			height: '65dp'
			padding: '5dp'

			canvas:
				Color:
					rgb: .265, .405, .70
				Rectangle:
					pos: self.pos
					size: self.size

			Button:
				text: ''
				color: (0, 0, 0, 1)
	            background_color: (1, 1, 1, 0)
	            size_hint_x: None
	            width: self.height
				on_press: root.show_load()
	            Image:
            		source: 'assets/custom-small.png'
            		y: self.parent.y + self.parent.height - 50
		            x: self.parent.x
		            size: 65, 45

			Label:
				text: 'F A C E B O O K  P O S T \' S'
				font_size: '25sp'

			Button:
				text: ''
				color: (0, 0, 0, 1)
	            background_color: (1, 1, 1, 0)
	            size_hint_x: None
	            width: self.height
	            on_press: app.refresh_post()
	            Image:
            		source: 'assets/refresh-small.png'
            		y: self.parent.y + self.parent.height - 50
		            x: self.parent.x
		            size: 45, 45
		            
        ListView:
        	id: post_list_view
        	adapter:
            	ListAdapter(data=root.data, cls=Factory.PostList,args_converter=root.args_converter)
<PostList>:

    size_hint_y: None

    BoxLayout:

        Button:
			text: root.message
			color: (0, 0, 0, 1)
			background_color: (255,255,255,1)
			text_size: self.width, None
			halign: 'center'
			padding: 10, 10
			valign: 'center'
			on_press: app.goto_comments(root.post_index)


