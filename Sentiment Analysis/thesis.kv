            	ListAdapter(data=root.data2, cls=Factory.CommentList,args_converter=root.args_converter)

    	Button:
			text: ''
			background_normal: 'assets/sa-long.png'
			background_down: 'assets/sa-down.png'
			size_hint: (1, 0.139)
			on_press: root.selectChart()
