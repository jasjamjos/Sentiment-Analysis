			text_size: self.width, None
			halign: 'center'
			padding: 10, 10
			valign: 'center'


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            path: '/documents/Training Data'
            dirselect: True
            id: filechooser
            filter: ['*.csv']
            multiselect: False
            on_selection: root.load(filechooser.path, filechooser.selection)

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load_selected(filechooser.selection)

<chart>:
	title: 'Stats:'
    title_color: [1,1,1,1]
    size_hint: 0.8, 0.8
    canvas:
		Color:
			rgb: 1, 1, 1
    	Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/results.png'
